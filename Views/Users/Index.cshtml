@model IEnumerable<User>

<a>Добавить пользователя</a>

<table class="table">
    <tr><th>Given name</th><th>Email</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>User</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="PostsList" asp-route-id="@user.Id">Публикации</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>