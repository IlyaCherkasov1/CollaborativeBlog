@model IEnumerable<Post>

<h3>С обзором также читают:</h3>

@foreach (var post in Model)
{
    <div class="card mb-3" style="max-width: 540px; width:540px; max-height:170px; height:170px">
        <div class="row g-0">
            <div class="col-md-4">
                <img class="img-fluid rounded-start" src="@post.Images[0].ImageUri" style="height: 160px; width: 540px;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-truncate">
                        <a asp-controller="Post" asp-action="PostDetails"
                           asp-route-postId="@post.PostId">@post.Title</a>
                    </h5>
                    <p class="card-text"></p>
                    <p class="card-text"></p>
                    <p class="card-text text-truncate">@post.ShortDescription</p>
                    <p class="card-text"><small class="text-muted">@post.PublicationDate.ToShortDateString()</small></p>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.AvverageRating != null)
{
    <h5>Средний пользовательский рейтинг: @ViewBag.AvverageRating </h5>

}

