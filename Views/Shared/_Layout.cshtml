<!DOCTYPE html>

<html>
<head>
    <meta name="color-scheme" content="light dark">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Ilearning</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/c303ac9db1.js" crossorigin="anonymous"></script>



    <link id="lightDarkScheme"
          href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css "
          rel="stylesheet">

    <script src="~/js/dark-mode-select.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>




</head>
<body>
    <div id="topheader">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">Ilearning</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="CategoryPosts" asp-controller="Home" asp-route-categoryName="Кино" aria-current="page">Кино</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="CategoryPosts" asp-controller="Home" asp-route-categoryName="Игры" aria-current="page">Игры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="CategoryPosts" asp-controller="Home" asp-route-categoryName="Книги" aria-current="page">Книги</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="CategoryPosts" asp-controller="Home" asp-route-categoryName="Статьи" aria-current="page">Статьи</a>
                        </li>

                    </ul>
                    <form id="searchPosts" class="d-flex" method="post" asp-controller="Home" asp-action="Search">
                        <input name="Text" id="TextSearchIput" class="form-control me-2" type="search" placeholder="@Localizer["SearchBox"]" aria-label="Search">
                        <button id="ApplyTextSearchButton" class="btn btn-outline-success" onclick="showPosts()">@Localizer["Search"]</button>
                    </form>
                    <span class="navbar-text">
                        <a class="nav-link fa fa-user-circle-o" style="font-size:40px;color:white" asp-controller="Home" asp-action="SignIn"></a>
                    </span>
                </div>
            </div>
        </nav>
    </div>


    <div>
        @RenderBody()
    </div>

    @*<footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">My Website</p></div>
        </footer>*@


</body>
</html>
