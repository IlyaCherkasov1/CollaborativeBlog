@model Post

    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <article>
                    <header class="mb-4">
                        <h1 class="fw-bolder mb-1">@Model.Title</h1>

                        <p>Категория: @Model.Category.CategoryName</p>

                        <p>Оценка автора: @Model.Rating</p>

                        <div class="text-muted fst-italic mb-2">Опубликовано: @Model.PublicationDate.ToLongDateString()</div>

                        @foreach (var tag in Model.Tags)
                        {
                            <a class="badge bg-secondary text-decoration-none link-light" asp-controller="Home"
                               asp-action="TagPosts" asp-route-tag="@tag.TagName">@tag.TagName</a>
                        }
                    </header>

                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            @for (int i = 1; i < Model.Images.Count; i++)
                            {
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Model.Images[0].ImageUri">
                            </div>
                            @for (int i = 1; i < Model.Images.Count; i++)
                            {
                                <div class="carousel-item ">
                                    <img class="d-block w-100" src="@Model.Images[i].ImageUri">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>


                    <section class="mb-5">
                        <p class="fs-5 mb-4">@Model.ShortDescription</p>
                    </section>


                    <section class="mb-8">
                        <h2 class="fw-bolder mb-4 mt-5">Описание:</h2>
                        <p class="fs-4 mb-8">@Html.Raw(Model.Description)</p>
                    </section>

                </article>

                <div class="d-flex">

                    <div class="col">

                        <form id="myLikePost" method="post" enctype="multipart/form-data" asp-controller="Post" asp-action="Like"
                              asp-route-postId="@Model.PostId">

                            <div id="like" class="d-inline">@ViewBag.CountLike</div>
                            <a onclick="showlike()">
                                @if (ViewBag.IsLike)
                                {
                                    <i id="likeIcon" class="fas fa-heart d-inline" style="color: #f7296a"></i>

                                }
                                else
                                {
                                    <i id="likeIcon" class="fas fa-heart d-inline"></i>
                                }
                            </a>


                        </form>
                    </div>
                    <div class="col">
             
                    </div>

                    <div class="col">
                        <p class="d-inline">Пользовательский рэйтинг:</p>
                        <h5 id="avverageUserRate" class="d-inline Bold"> @Model.UserRating</h5>
                    </div>

                </div>

                <br />

                <form id="myRatePost" method="post" enctype="multipart/form-data"
                      asp-controller="Post" asp-action="Rate" asp-route-postId="@Model.PostId">
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i < ViewBag.MyRaiting)
                        {
                            <span onclick="starmark(this)" id="@(i+1)one" style="font-size:20px;cursor:pointer;" class="fa fa-star checked"></span>
                        }
                        else
                        {
                            <span onclick="starmark(this)" id="@(i+1)one" style="font-size:20px;cursor:pointer;" class="fa fa-star "></span>
                        }
                    }
                  <br />
                    <button type="button" onclick="showrating()" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Оценить
                    </button>
                </form>

                <br />

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Ваша оценка принята!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Спасибо, что поделились своим мнением
                            </div>
                        </div>
                    </div>
                </div>



                <input type="hidden" name="PostId" value="@Model.PostId" />

                <section class="mb-5">
                    <div class="card">
                        <div class="card-body">

                            <form class="mb-4">
                                <textarea id="messageZone" class="form-control" rows="3" placeholder="Join the discussion and leave a comment!"></textarea>

                                <button id="butSend" type="button" class="btn btn-primary mt-1">Отправить</button>
                            </form>

                            <div id="chatroom"></div>

                        </div>
                    </div>
                </section>
            </div>

                    <div class="col-lg-4 ">

                        <!-- Categories widget-->
                        <div class="card  mb-4">
                            <div class="card-header">Categories</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <ul class="list-unstyled mb-0">
                                            <li><a href="#!">Web Design</a></li>
                                            <li><a href="#!">HTML</a></li>
                                            <li><a href="#!">Freebies</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-sm-6">
                                        <ul class="list-unstyled mb-0">
                                            <li><a href="#!">JavaScript</a></li>
                                            <li><a href="#!">CSS</a></li>
                                            <li><a href="#!">Tutorials</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h3>С обзором также читают:</h3>

                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img class="img-fluid rounded-start" src="~/9a216a974262e9792f1ee009656b6874.jpg" />
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">Card title</h5>
                                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <script src="~/js/signalr.min.js"></script>
                    <script src="~/js/chat.js"></script>

                </div>
    </div>

    <script src="~/js/like.js"></script>
    <script src="~/js/rate.js"></script>
